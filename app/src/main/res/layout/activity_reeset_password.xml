<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultWhite"
    tools:context=".ReesetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:id="@+id/one"
        android:gravity="center"
        android:background="@drawable/blue_up"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageTitle"
            android:text="CODE VERIFICATION"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/montserratblack"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:background="@color/defaultDark"/>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/white_corner1"
        android:layout_below="@+id/one"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Enter new password"
            android:textColor="@color/defaultDark"
            android:textSize="12dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edt_login"
            android:fontFamily="@font/montserratregular"
            android:hint="******"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Confirm new password"
            android:textColor="@color/defaultDark"
            android:textSize="12dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edtConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edt_login"
            android:fontFamily="@font/montserratregular"
            android:hint="******"
            android:inputType="textEmailAddress"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="15dp" />


        <Button
            android:id="@+id/reset"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_red"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginTop="10dp"
            android:text="Reset"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Re-send code"
            android:textColor="#ff6678"
            android:textSize="17dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#ff6678"
            android:visibility="gone" />

    </LinearLayout>





    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:background="@color/defaultDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/two"
        android:background="@drawable/blue_bottom">

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/white_corner2"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/two"/>

</RelativeLayout>