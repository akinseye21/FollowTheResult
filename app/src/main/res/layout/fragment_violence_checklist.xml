<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentViolenceChecklist"
    tools:context=".FragmentViolenceChecklist">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_above="@+id/two"
        android:layout_below="@+id/one"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratmedium"
                            android:text="Welcome"
                            android:textColor="@color/defaultDark"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/fullname"
                            android:fontFamily="@font/montserratextrabold"
                            android:text="Godbless Umar"
                            android:textColor="@color/defaultDark"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/location"
                            android:fontFamily="@font/montserratmedium"
                            android:gravity="center"
                            android:text="Location:"
                            android:textColor="@color/defaultDark"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lin_lga"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratmedium"
                                android:gravity="center"
                                android:text="LGA: "
                                android:textColor="@color/defaultDark"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratblack"
                                android:gravity="center"
                                android:id="@+id/lga"
                                android:text="Ohafia"
                                android:textColor="@color/defaultDark"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratmedium"
                                android:gravity="center"
                                android:text="State: "
                                android:textColor="@color/defaultDark"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratblack"
                                android:gravity="center"
                                android:id="@+id/state"
                                android:text="Abia"
                                android:textColor="@color/defaultDark"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lin_lgacount"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratmedium"
                                android:gravity="center"
                                android:text="No of LGAs: "
                                android:textColor="@color/defaultDark"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratblack"
                                android:gravity="center"
                                android:id="@+id/lga_count"
                                android:text="10"
                                android:textColor="@color/defaultDark"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:padding="20dp"
                        android:id="@+id/card"
                        android:background="@drawable/normal_dark_corner">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/presentquestion"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/montserratbold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" out of "
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/montserratbold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/numofquestions"
                                android:text="7"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/montserratbold"/>

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:id="@+id/question"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserratmedium"/>

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radiogroupYesNo"
                            android:visibility="visible"
                            android:layout_marginTop="20dp">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioYes"
                                android:text="Yes"
                                android:textColor="@color/white"
                                android:buttonTint="@color/white"
                                android:fontFamily="@font/montserratbold"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioNo"
                                android:text="No"
                                android:textColor="@color/white"
                                android:buttonTint="@color/white"
                                android:fontFamily="@font/montserratbold"/>
                        </RadioGroup>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/relTime"
                            android:visibility="gone"
                            android:layout_marginTop="20dp">
                            <RelativeLayout
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/one"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hour"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserratregular"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:text="Minute"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserratregular"/>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/one"
                                android:orientation="horizontal">
                                <EditText
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:singleLine="true"
                                    android:id="@+id/num1"
                                    android:hint="0"
                                    android:maxLength="1"
                                    android:inputType="number"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserratbold"
                                    android:textColor="@color/defaultDark"
                                    android:background="#e6e6e6"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="40dp"
                                    android:background="#ffffff"/>
                                <EditText
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:singleLine="true"
                                    android:id="@+id/num2"
                                    android:hint="0"
                                    android:maxLength="1"
                                    android:inputType="number"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserratbold"
                                    android:textColor="@color/defaultDark"
                                    android:background="#e6e6e6"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/montserratblack"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"/>

                                <EditText
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:singleLine="true"
                                    android:hint="0"
                                    android:maxLength="1"
                                    android:id="@+id/num3"
                                    android:inputType="number"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserratbold"
                                    android:textColor="@color/defaultDark"
                                    android:background="#e6e6e6"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="40dp"
                                    android:background="#ffffff"/>
                                <EditText
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:singleLine="true"
                                    android:hint="0"
                                    android:id="@+id/num4"
                                    android:maxLength="1"
                                    android:inputType="number"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserratbold"
                                    android:textColor="@color/defaultDark"
                                    android:background="#e6e6e6"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PM"
                                    android:textColor="@color/white"
                                    android:paddingLeft="10dp"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#efefef"
                            android:visibility="gone"
                            android:id="@+id/textInfo"
                            android:layout_marginTop="20dp"
                            android:inputType="textCapWords"
                            android:hint="Enter text here"
                            android:textSize="12dp"
                            android:textColor="@color/defaultDark"
                            android:fontFamily="@font/montserratregular"
                            android:padding="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>



                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/normal_white_corner"
                            android:fontFamily="@font/montserratbold"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="Violence Tracker Checklist"
                            android:textColor="@color/defaultDark" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/normal_white_corner">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="10dp"
                                android:src="@drawable/ic14"
                                app:tint="@color/defaultDark" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/card"
                        android:layout_marginTop="10dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/previous"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:background="@drawable/normal_dark_corner"
                            android:fontFamily="@font/montserratmedium"
                            android:text="Previous"
                            android:textAllCaps="false"
                            android:textColor="@color/defaultWhite"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/next"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:background="@drawable/normal_red_corner"
                            android:fontFamily="@font/montserratmedium"
                            android:text="Next"
                            android:textAllCaps="false"
                            android:textColor="@color/defaultWhite" />

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>