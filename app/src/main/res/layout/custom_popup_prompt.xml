<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/normal_white_corner"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/question"
        android:layout_gravity="center"
        app:tint="@color/defaultDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/montserratmedium"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/text"
        android:textSize="15dp"
        android:text="This is the text"
        android:textColor="#f4000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/proceed"
            android:textAllCaps="false"
            android:fontFamily="@font/montserratmedium"
            android:background="@drawable/normal_dark_corner"
            android:textColor="@color/white"
            android:text="Proceed"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/close"
            android:textAllCaps="false"
            android:fontFamily="@font/montserratmedium"
            android:background="@drawable/normal_red_corner"
            android:textColor="@color/white"
            android:text="Close"/>
    </LinearLayout>






</LinearLayout>